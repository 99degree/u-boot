if ARCH_SNAPDRAGON

config SYS_SOC
	default "snapdragon"

config SYS_BOARD
	string "Board name"

config SYS_MALLOC_F_LEN
	default 0x2000

config SPL_SYS_MALLOC_F
	default y

config SPL_SYS_MALLOC_F_LEN
	default 0x2000

config LNX_KRNL_IMG_TEXT_OFFSET_BASE
	default 0x80000000

choice
	prompt "Snapdragon board select"

config TARGET_DRAGONBOARD410C
	bool "96Boards Dragonboard 410C"
	select BOARD_LATE_INIT
	imply CLK_QCOM_APQ8016
	imply PINCTRL_QCOM_APQ8016
	imply BUTTON_QCOM_PMIC
	help
	  Support for 96Boards Dragonboard 410C. This board complies with
	  96Board Open Platform Specifications. Features:
	  - Qualcomm Snapdragon 410C SoC - APQ8016 (4xCortex A53, Adreno 306)
	  - 1GiB RAM
	  - 8GiB eMMC, uSD slot
	  - WiFi, Bluetooth and GPS module
	  - 2x Host, 1x Device USB port
	  - HDMI
	  - 20-pin low speed and 40-pin high speed expanders, 4 LED, 3 buttons

	  Enable CONFIG_LINUX_KERNEL_IMAGE_HEADER to support running U-Boot as
	  a chainloaded bootloader, or enable CONFIG_ENABLE_ARM_SOC_BOOT0_HOOK
	  if you intend to run U-Boot as the primary bootloader.

config TARGET_DRAGONBOARD820C
	bool "96Boards Dragonboard 820C"
	imply CLK_QCOM_APQ8096
	imply PINCTRL_QCOM_APQ8096
	imply BUTTON_QCOM_PMIC
	help
	  Support for 96Boards Dragonboard 820C. This board complies with
	  96Board Open Platform Specifications. Features:
	  - Qualcomm Snapdragon 820C SoC - APQ8096 (4xKyro CPU)
	  - 3GiB RAM
	  - 32GiB UFS drive

config TARGET_QCOM
	bool "Qualcomm generic board support"
	select BOARD_LATE_INIT
	select SAVE_PREV_BL_FDT_ADDR
	select OF_BOARD
	imply LINUX_KERNEL_IMAGE_HEADER
	imply BUTTON_QCOM_PMIC
	help
	  Stub target for generic Qualcomm board support. This target currently
	  support the Dragonboard845c and starqltechn boards, all new Qualcomm
	  boards should use this target.

endchoice

source "board/qualcomm/dragonboard410c/Kconfig"
source "board/qualcomm/dragonboard820c/Kconfig"
source "board/qualcomm/generic/Kconfig"

endif
